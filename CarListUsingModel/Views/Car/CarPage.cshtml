
@{
    Layout = null;

    var employeeId = Request["employeeId"] ?? "Value";
    var employeeName = Request["employeeName"] ?? "Value";
    var employeePositon = Request["employeePosition"] ?? "Value";
    var employeeGender = Request["employeeGender"] ?? "Value";
    var ratePerDay = Request["ratePerDay"] ?? "0";
    var daysOfWork = Request["daysOfWork"] ?? "0";

    var grossPay = ratePerDay.AsInt() * daysOfWork.AsInt();

    var sss = grossPay * 0.05;
    var philhealth = grossPay * 0.05;
    var pagibig = grossPay * 0.05;
    var tax = grossPay * 0.05;

    var netPay = grossPay - (sss + philhealth + pagibig + tax);
}

<!DOCTYPE html>
<html>
<head>
    <link rel="icon" type="image/svg" href="~/Content/icons/money-svgrepo-com.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width" />
    <title>Payroll System</title>
    @Styles.Render("~/Content/Site.css")
</head>
<body>
    <header>
        <p>Car Enthusiast Website</p>
        <ul>
            <li>@Html.ActionLink("List of Cars", "CarTablePage", "Car", new { area = "" }, new { @class = "" })</li>
            <li>|</li>
            <li>@Html.ActionLink("Add a Car", "CarPage", "Car", new { area = "" }, new { @class = "" })</li>
        </ul>
    </header>
    <div class="main">
        <div class="form-canva">
            <form>
                <h1>Car Listing System</h1>
                <div class="payroll-information-canva">
                    <div class="payroll-information-left">
                        <div class="personal-information">
                            <h3>Add Car</h3>
                            <label>Car ID: </label><input type="number" name="employeeId" required />
                            <label>Car Brand: </label><input type="text" name="employeeName" required />
                            <label>Car Description: </label><input type="text" name="employeeId" required />
                            <label>Car Price (PHP): </label><input type="number" name="employeeName" required />
                        </div>
                        <div class="buttons">
                            <button type="submit" class="save-btn">Save</button>
                            <button type="reset" class="cancel-btn" onclick="resetButton()">Cancel</button>
                        </div>
                    </div>
                    <div class="payroll-information-right">
                        <div class="details-informations">
                            <h3>Details</h3>
                            <label><strong>Car ID: </strong><span>@employeeId</span></label>
                            <label><strong>Car Brand: </strong><span>@employeeName</span></label>
                            <label><strong>Car Model: </strong><span>@employeePositon</span></label>
                            <label><strong>Car Description: </strong><span>@employeeGender</span></label>
                            <label><strong>Car Price(PHP): </strong><span>@employeeGender</span></label>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script>
        function resetButton() {
            const spanDetails = document.querySelectorAll('.details-informations span');
            spanDetails.forEach(span => {
                span.textContent = "Value";
            });

            const spanSalary = document.querySelectorAll('.salary-computation span');
            spanSalary.forEach(span => {
                span.textContent = "0";
            })
        }
    </script>
</body>
</html>
